.Intro
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  text-align center
  background #262626
  z-index 900

  &-line
    opacity 0
    filter blur(15px)
    color #ffffff
    font-size 1.2em
    letter-spacing 7.3px
    text-transform uppercase
